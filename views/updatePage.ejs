                    <li><a class="dropdown-item" href="#">Sign out</a></li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col mx-3 mt-3">
              <ul class="nav mb-auto text-center ms-2 mt-4">
                <li class="nav-item p-2">
                  <a href="http://localhost:8000/dashboard" class="" aria-current="page" title="Home" data-bs-toggle="tooltip" data-bs-placement="right">
                    <h6 style="color: black;">Dashboard</h6>
                  </a>
                </li>
                <li class="nav-item p-2">
                  <a href="#" class="" aria-current="page" title="Home" data-bs-toggle="tooltip" data-bs-placement="right">
                    <h6 style="color: black;">Car List</h6>
                  </a>
                </li>
              </ul>
            </div>
        </div>     
  </div>
        <div class="col-9 mt-3 ps-4 " id="card-main">
            <h3>Add New Car</h3>
            <div class="row" style="background-color: white;">
                <div class="col-3 g-4">
                    <P class="p-2">Name</P>
                    <P class="p-2">Price</P>
                    <P class="p-2">Size</P>
                    <P class="p-2">Image</P>
                </div>
                <div class="col-4 g-4">
                    <%if(pageMark != null) { %>
                        <form action="http://localhost:8000/dashboard/update/<%=data.id%>" enctype="multipart/form-data" method="post">
                          <input class="form-control mt-3" id="modelUpdate" type="text" value="<%= data.model %>" name="model" aria-label="default input example" >
                          <input class="form-control mt-3" id="rentPerDayUpdate" type="number" value="<%= data.rentPerDay %>" name="rentPerDay" aria-label="default input example">
                          <!-- input car size -->
                          <select class="form-select mt-3" name="carSize" aria-label="Default select example">
                            <option selected value="<%= data.carSize %>"><%= data.carSize %></option>
                            <option value="Small">Small</option>
                            <option value="Medium">Medium</option>
                            <option value="Large">Large</option>
                          </select>
                          <!--  -->
                          <input class="form-control mt-3" id="imageUpdate" type="file" value="<%= data.image %>" name="image" aria-label="default input example">
                          <button type="submit" id="updateBtn" value="<%= data.id %>" class="mt-3 mb-3 btn btn-success">Update Data</button>
                        </form>
                        <%}else if(pageMark == null){%>
                        <form action="http://localhost:8000/dashboard/create" method="post" enctype="multipart/form-data">
                          <input class="form-control mt-3" type="text" name="model" aria-label="default input example" >
                          <input class="form-control mt-3" type="number" name="rentPerDay" aria-label="default input example">
                          <select class="form-select mt-3" name="carSize" aria-label="Default select example">
                            <option selected>Select Car Size</option>
                            <option value="Small">Small</option>
                            <option value="Medium">Medium</option>
                            <option value="Large">Large</option>
                          </select>
                          <input class="form-control mt-3" type="file" name="image" aria-label="default input example">
                          <button type="submit" class="mt-3 btn btn-success mb-3">Update Data</button>
                        </form>
                    <%}%>
                </div>
            </div>
            
          </div>
        </div>
    </div>  
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
